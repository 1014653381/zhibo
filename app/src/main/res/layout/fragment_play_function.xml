<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_margin="10dp"
    android:id="@+id/play_ll_person_info"
    android:layout_width="120dp"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:background="@drawable/play_bt_bg">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/play_bt_bg" />
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北财"
            android:textSize="13sp"
            android:textColor="@color/color_ffffff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周立洋"
            android:textSize="10sp"
            android:textColor="@color/color_ffffff" />
    </LinearLayout>
</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
    android:id="@+id/play_recycler_hor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/play_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_ll_person_info"
        android:layout_marginTop="10dp"
        android:text="映客票：123123"
        android:background="@drawable/play_bt_bg"
        android:padding="10dp"
        android:textColor="@color/color_ffffff"
        android:textSize="13sp" />
    <LinearLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_below="@id/play_recycler_hor"
        android:layout_toLeftOf="@id/play_tv_number"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/play_tv_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00:45"
            android:gravity="center"
            android:textColor="@color/color_ffffff" />
        <TextView
            android:id="@+id/play_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2017/08/21"
            android:gravity="center"
            android:textColor="@color/color_ffffff" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:padding="10dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/play_recycler_ver"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/play_fun_iv_pub"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/room_down_publicchat"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@id/play_fun_iv_pub"
            android:id="@+id/play_fun_iv_gift"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/room_down_gift"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/play_fun_iv_gift"
            android:id="@+id/play_fun_iv_music"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/room_down_music"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/play_fun_iv_music"
            android:id="@+id/play_fun_iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/shortvideo_button_close"
            />
    </LinearLayout>

    <RelativeLayout
        android:background="@color/color_ffffff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:padding="-10dp"
        android:layout_height="40dp"
        android:id="@+id/play_fun_rl"
        android:visibility="gone"
        >
        <EditText
            android:id="@+id/play_fun_et"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="在此输入你要说的话"
            />

        <Button
            android:id="@+id/play_fun_bt"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/play_message_tv_bg"
            android:textColor="@color/color_ffffff"
            android:text="发送"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="30dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:id="@+id/play_fun_ll"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        >
    </LinearLayout>



</RelativeLayout>